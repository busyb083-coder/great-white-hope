# ============================================================================
# GREAT WHITE HOPE - Environment Variables Template
# ============================================================================
# Copy this file to .env.local and fill in actual values
# NEVER commit .env.local to git
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/great_white_hope
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================================================
# OBJECT STORAGE (S3-compatible)
# ============================================================================
# Local development: MinIO (included in docker-compose)
# Production: AWS S3 or compatible service
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=great-white-hope
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_PUBLIC_URL=http://localhost:9000/great-white-hope

# ============================================================================
# EMAIL / SMTP
# ============================================================================
# Local development: MailHog (included in docker-compose)
# Production: SendGrid, AWS SES, or SMTP provider
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@greatwhitehope.com
SMTP_TLS=false

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production
REFRESH_TOKEN_EXPIRY=30d

# OAuth (optional - for Google/GitHub login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
LOG_LEVEL=debug
PORT=4000

FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000
ADMIN_URL=http://localhost:3000/admin

# ============================================================================
# OBSERVABILITY & MONITORING
# ============================================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# FILE UPLOADS
# ============================================================================
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,application/pdf

# ============================================================================
# IMAGE TRANSFORMATION (optional)
# ============================================================================
# Use imgproxy or Cloudinary for dynamic image resizing
IMAGE_PROXY_URL=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================================================
# PAYMENT PROCESSORS
# ============================================================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ============================================================================
# ADMIN PANEL
# ============================================================================
ADMIN_DEFAULT_PASSWORD=ChangeMe123!
ADMIN_SESSION_TIMEOUT_MINUTES=60

# ============================================================================
# BACKUP & RESTORE
# ============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=great-white-hope-backups

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_PREVIEW_MODE=true
FEATURE_CONTENT_VERSIONING=true
FEATURE_EXPORT_IMPORT=true
